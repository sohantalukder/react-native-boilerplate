{
  "name": "@sohantalukder/react-native-boilerplate",
  "version": "1.0.0",
  "description": "A comprehensive React Native template with modern tools and best practices",
  "main": "template.config.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sohantalukder/react-native-boilerplate.git"
  },
  "keywords": [
    "react-native",
    "template",
    "boilerplate",
    "typescript",
    "navigation",
    "state-management"
  ],
  "author": "Sohan Talukder",
  "license": "MIT",
  "files": [
    "template",
    "template.config.js"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "android:release": "react-native run-android --mode=release",
    "ios:release": "react-native run-ios --mode=Release",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:ios": "cd ios && xcodebuild -workspace ReactNativeTemplate.xcworkspace -scheme ReactNativeTemplate -configuration Release -destination generic/platform=iOS -archivePath ReactNativeTemplate.xcarchive archive",
    "start": "react-native start",
    "test": "jest",
    "lint:rules": "eslint . --cache",
    "lint:code-format": "prettier --check \"{src,__mocks__}/**/*.{js,json,md,ts,tsx,yml,yaml}\"",
    "lint:type-check": "tsc",
    "lint": "yarn lint:rules && yarn lint:code-format && yarn lint:type-check",
    "lint:fix": "yarn lint:rules --fix && yarn lint:code-format --write && yarn lint:type-check",
    "test:report": "jest --collectCoverage --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit --coverage",
    "pod-install": "npx pod-install",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.15.0",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "@shopify/flash-list": "^1.8.3",
    "@tanstack/react-query": "^5.81.5",
    "axios": "^1.10.0",
    "i18next": "^25.3.0",
    "react": "19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-i18next": "^15.5.3",
    "react-native": "0.80.1",
    "react-native-device-info": "^14.0.4",
    "react-native-fast-image": "^8.6.3",
    "react-native-gesture-handler": "^2.27.1",
    "react-native-mmkv": "^3.3.0",
    "react-native-reanimated": "^3.18.0",
    "react-native-safe-area-context": "^5.5.1",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "^15.12.0",
    "react-native-webview": "^13.15.0",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.3",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "15.0.0",
    "@react-native-community/cli-platform-android": "15.0.0",
    "@react-native-community/cli-platform-ios": "15.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-root-import": "^6.6.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-testing-library": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "lint-staged": "^16.0.0",
    "prettier": "^3.4.2",
    "react-native-svg-transformer": "^1.5.1",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
}
